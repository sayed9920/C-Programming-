THE AREA:

#include <stdio.h>
#define PI 3.1416

int main() {
    float radius, area;

    printf("Enter radius of the circle: ");
    scanf("%f", &radius);

    area = PI * radius * radius;

    printf("Area of the circle = %.2f\n", area);

    return 0;
}

THE AREA OF CIRCLE:


#include <stdio.h>

#define PI 3.1416

int main() {
    float area, radius;

    printf("Enter the area of the circle: ");
    
    scanf("%f", &area);

    radius = sqrt(area / PI);

    printf("Radius of the circle = %.2f\n", radius);

    return 0;
}